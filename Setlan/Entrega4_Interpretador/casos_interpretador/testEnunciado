program {
    using int x; in
    repeat # primer caso, atípico pero cómodo
       scan x
    while (x > 0) do
       print x
    ;
    
    println "siguiente linea comando";
    scan x;
    while (x > 0) do { # segundo caso, un `while do {...}` típico
        print x;
        scan x;
    };
    
    println "siguiente linea comando";
    scan x;
    repeat { # tercer caso, parecido a un `do {...} while` de C
        print x;
        scan x;
    }while (x > 0);
}